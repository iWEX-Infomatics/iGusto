 "html": "<style>\r\n.qr-code {}\r\n</style>\r\n\r\n<div style=\"\r\n    text-align: center;\r\n    border: 2px solid #b5b35c;\r\n    border-radius: 20px;\r\n    padding: 30px 25px;\r\n    width: 380px;\r\n    margin: 20px auto;\r\n    font-family: 'Poppins', 'Segoe UI', sans-serif;\r\n    background: linear-gradient(105deg, #fffef9 0%, #f5f5ef 100%);\r\n\r\n    box-shadow: 0 6px 20px rgba(181, 179, 92, 0.25);\r\n\">\r\n\r\n\r\n    <!-- ROOM HEADER -->\r\n    <div style=\"\r\n           background: linear-gradient(135deg, #b5b35c, #c7c56e);\r\n        color: #2f2f2f;\r\n        padding: 15px;\r\n        border-radius: 12px;\r\n        margin-bottom: 20px;\r\n        box-shadow: 0 4px 14px rgba(181,179,92,0.4);\r\n    \">\r\n        <h2 style=\"margin:0; font-size: 28px; font-weight: 700;\">\r\n            ROOM {{ doc.room_number }}\r\n        </h2>\r\n    </div>\r\n\r\n    <p style=\"margin: 15px 0; font-size: 15px; color: #444; font-weight: 500; line-height: 1.6;\">\r\n        <span style=\"display: block; font-size: 16px; color: #a5a33b; margin-bottom: 5px;\">\ud83d\udcf1 Scan QR Code</span>\r\n        <span style=\"color: #a5a33b;\">to Order a Service</span>\r\n    </p>\r\n\r\n    <!-- QR -->\r\n    {% set qr_base64 = frappe.call(\"igusto.igusto.doctype.room.room.generate_room_qr\", room_name=doc.name) %}\r\n    <div class=\"qr-code\">\r\n        {% if qr_base64 %}\r\n            <img src=\"data:image/png;base64,{{ qr_base64 }}\"\r\n                 width=\"200\" height=\"200\"\r\n                 style=\"display:block; margin:0 auto; border:4px solid #d8d29b; border-radius:12px;\">\r\n        {% else %}\r\n            <p style=\"color:#aaa;\">QR Code not available</p>\r\n        {% endif %}\r\n    </div>\r\n\r\n    <!-- Divider -->\r\n    <div style=\"height: 2px; background: linear-gradient(to right, transparent, #b5b35c, transparent); margin: 25px 0;\"></div>\r\n\r\n    <!-- COMPANY INFO -->\r\n    {% set company_name = frappe.db.get_single_value(\"Global Defaults\", \"default_company\") %}\r\n    {% if company_name %}\r\n        {% set company = frappe.get_doc(\"Company\", company_name) %}\r\n\r\n        <!-- Logo -->\r\n        {% set logo_file = frappe.db.sql(\"\"\"\r\n            SELECT file_url \r\n            FROM `tabFile` \r\n            WHERE attached_to_doctype='Company' \r\n            AND attached_to_name=%s \r\n            AND is_private=0 \r\n            LIMIT 1\r\n        \"\"\", (company.name,), as_dict=1) %}\r\n\r\n        {% if logo_file and logo_file[0] and logo_file[0].file_url %}\r\n            <div style=\"margin: 15px 0;\">\r\n                <img src=\"{{ logo_file[0].file_url }}\" \r\n                     width=\"90\" height=\"90\"\r\n                     style=\"object-fit:contain; border-radius:50%;\">\r\n            </div>\r\n        {% else %}\r\n            <div style=\"\r\n                margin: 15px 0;\r\n                width: 90px; height: 90px;\r\n                border-radius: 50%;\r\n                background: linear-gradient(135deg, #c7b048, #e3d179);\r\n                display: flex; align-items:center; justify-content:center;\r\n                color: #a5a33b; font-size:36px; font-weight:bold;\r\n                box-shadow: 0 4px 12px rgba(181,179,92,0.35);\r\n            \">\r\n                {{ company.company_name[0] }}\r\n            </div>\r\n        {% endif %}\r\n\r\n        <h3 style=\"margin: 15px 0 10px 0; font-size: 22px; color:#b5b35c; font-weight: 700;\">\r\n            {{ company.company_name }}\r\n        </h3>\r\n\r\n        <!-- Address -->\r\n        {% set address_link = frappe.db.get_value(\"Dynamic Link\",\r\n            {\"link_doctype\":\"Company\",\"link_name\":company.name,\"parenttype\":\"Address\"},\r\n            \"parent\") %}\r\n\r\n        {% if address_link %}\r\n            {% set company_address = frappe.get_doc(\"Address\", address_link) %}\r\n            {% if company_address.is_your_company_address == 1 %}\r\n                <div  style=\"font-size: 13px; margin: 12px 0; color: #555; line-height: 1.7; padding: 12px; background: linear-gradient(105deg, #fef9dd87 0%, #fef9dd87 100%); border-radius: 8px; border-left: 3px solid #d8d29b;border-right: 3px solid #d8d29b;\">\r\n                    \ud83d\udccd\r\n                    {% if company_address.address_line1 %}{{ company_address.address_line1 }}<br>{% endif %}\r\n                    {% if company_address.address_line2 %}<span style=\"margin-left:18px;\">{{ company_address.address_line2 }}</span><br>{% endif %}\r\n                    <span style=\"margin-left:18px;\">\r\n                        {% if company_address.city %}{{ company_address.city }}{% endif %}\r\n                        {% if company_address.state %}, {{ company_address.state }}{% endif %}\r\n                        {% if company_address.pincode %} - {{ company_address.pincode }}{% endif %}\r\n                    </span>\r\n                    {% if company_address.country %}\r\n                        <br><span style=\"margin-left:18px;\">{{ company_address.country }}</span>\r\n                    {% endif %}\r\n                </div>\r\n            {% endif %}\r\n        {% endif %}\r\n\r\n        <!-- CONTACT LINE IN ONE ROW -->\r\n        <div style=\"font-size: 12px; margin-top: 10px;\">\r\n            {% if company.phone_no %}\ud83d\udcde {{ company.phone_no }}{% endif %}\r\n            <br>\r\n            {% if company.email %}\u2709\ufe0f {{ company.email }}{% endif %}\r\n        </div>\r\n\r\n\r\n    {% endif %}\r\n\r\n    <div style=\"margin-top: 20px; font-size: 10px; font-weight: bolder;color: #aaa; letter-spacing: 0.5px;\">\r\n        \u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\u2501\r\n    </div>\r\n</div>\r\n",
